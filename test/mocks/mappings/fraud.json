{
  "mappings": [
    {
      "scenarioName": "fraud-success",
      "newScenarioState": "Started",
      "request": {
        "method": "GET",
        "url": "/__reset/fraud-success"
      },
      "response": {
        "status": 200
      }
    },
    {
      "scenarioName": "fraud-success",
      "requiredScenarioState": "Started",
      "newScenarioState": "FraudCheck",
      "request": {
        "method": "POST",
        "urlPath": "/session",
        "headers": {
          "x-scenario-id": {
            "equalTo": "fraud-success"
          }
        }
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "session_id": "ABADCAFE",
          "state": "sT@t3",
          "redirect_uri": "http://{{request.headers.Host}}/return"
        },
        "transformers": ["response-template"]
      }
    },
    {
      "scenarioName": "fraud-success",
      "requiredScenarioState": "FraudCheck",
      "newScenarioState": "AuthCode",
      "request": {
        "method": "POST",
        "urlPath": "/identity-check",
        "headers": {
          "x-scenario-id": {
            "equalTo": "fraud-success"
          },
          "session_id": {
            "equalTo": "ABADCAFE"
          }
        }
      },
      "response": {
        "status": 200
      }
    },
    {
      "scenarioName": "fraud-success",
      "requiredScenarioState": "AuthCode",
      "request": {
        "method": "GET",
        "urlPath": "/authorization",
        "headers": {
          "x-scenario-id": {
            "equalTo": "fraud-success"
          },
          "session-id": {
            "equalTo": "ABADCAFE"
          }
        }
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "authorizationCode": {
            "value": "FACEFEED"
          }
        }
      }
    },
    {
      "scenarioName": "fraud-success",
      "request": {
        "method": "GET",
        "urlPathPattern": "/return.*",
        "queryParameters": {
          "client_id": {
            "equalTo": "standalone"
          },
          "state": {
            "equalTo": "sT@t3"
          },
          "code": {
            "equalTo": "FACEFEED"
          }
        }
      },
      "response": {
        "status": 200,
        "body": "OAuth callback received successfully"
      }
    }
  ]
}
